<div class="interactable-container container">
    <div class="row full-width justify-content-{{@alignment}}">
        {{#if @label}}
        <Interactable::Label @label={{@label}} @required={{@required}} @labelSize={{@labelSize}} />
        {{/if}}
        <div class="interactable-element interactable-size-{{@size}}">
            <textarea
                class="inputfield inputfield-{{this.type}} text-area text-area-height-{{this.height}} text-{{@textPosition}} interactable inputfield-hide-invalidity"
                pattern={{this.pattern}} minLength={{@minLength}} maxLength={{@maxLength}} disabled={{@disabled}}
                autofocus={{@autofocus}} required={{@required}} value={{changeset-get @changeset @key}}
                placeholder={{@placeholder}} {{on "change" this.onChange}} />
            {{#if @info}}
            <Interactable::ButtonInfo @article={{@info}} />
            {{/if}}
        </div>
        {{#if @subtitle}}
        <p class="interactable-subtitle">{{@subtitle}}</p>
        {{/if}}
    </div>
</div>