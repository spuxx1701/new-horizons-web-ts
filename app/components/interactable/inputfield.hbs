<div class="interactable-container container" style={{this.escapedStyle}}>
    <div class="row full-width justify-content-{{@alignment}}">
        {{#if @label}}
        <Interactable::Label @label={{@label}} @required={{@required}} @labelSize={{@labelSize}} />
        {{/if}}
        <div class="interactable-element interactable-size-{{@size}}">
            <input id="{{@id}}-input"
                class="inputfield inputfield-{{this.type}} text-{{@textPosition}} interactable inputfield-hide-invalidity"
                type={{@type}} pattern={{this.pattern}} minLength={{@minLength}} maxLength={{@maxLength}}
                disabled={{@disabled}} required={{@required}} autofocus={{@autofocus}} value={{changeset-get @changeset
                @key}} placeholder={{@placeholder}} {{on "change" this.onChange}} {{on "invalid" this.onInvalid}} />
            {{#if @info}}
            <Interactable::ButtonInfo @article={{@info}} />
            {{/if}}
        </div>
        {{#if @subtitle}}
        <p class="interactable-subtitle">{{@subtitle}}</p>
        {{/if}}
    </div>
</div>