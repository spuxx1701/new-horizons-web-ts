<div class="modal-inner">
    <div class="modal-inner-header modal-header-error">
        <div class="modal-header-title-container">
            <FaIcon @icon="exclamation-circle" class="modal-header-icon" />
            <h4 class="modal-header-title">{{localize "Modal_Game_RequirementsFailed_Title"}}</h4>
        </div>
        <button id="modal-button-close" type="button" class="modal-button-close" {{on "click" this.modalService.hide}}>
            <FaIcon @icon="times" />
        </button>
    </div>
    <div class="modal-inner-content">
        <p>{{localize "Modal_Game_RequirementsFailed_Text"}}</p>
        <ul>
            {{#each this.requirements as |requirement|}}
            <li>
                <div class="flex align-items-center">
                    <p>{{requirement.textLeft}}</p>
                    <FaIcon @icon="long-arrow-alt-right" class="margin-sides-small" />
                    <p>{{requirement.textRight}}</p>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
    <div class="modal-inner-footer">
        <button id="modal-button-footer-yes" type="button" class="button" {{on "click" this.onYesClick}}>
            {{localize "Misc_Ok"}}
        </button>
    </div>
</div>