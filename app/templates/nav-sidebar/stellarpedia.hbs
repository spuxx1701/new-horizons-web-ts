<button class="sidebar-button-1" type="button" {{on 'click' this.returnToPrevious}}>
    <FaIcon @icon="chevron-left" @size={{this.sidebarIconSize}} class="margin-sides-medium fg-teal-neon" />
    <p class="margin-vertical-auto">{{localize "Misc_Back"}}</p>
</button>
<div class="sidebar-sep"></div>
<div class="h-box justify-content-between">
    <h4 class="fg-white margin-vertical-medium sidebar-header">{{localize "Misc_Stellarpedia"}}</h4>
    <div class="sidebar-header-toolbar">
        <button id="sidebar-reduce-all-button" type="button" class="sidebar-button-tiny" {{on "click"
            this.onReduceAllClick}}>
            <FaIcon @icon="arrows-alt-v" />
        </button>
    </div>
</div>
<div class="sidebar-sep"></div>
<div class="v-box" id="generator-tabs" {{did-insert this.updateSelectedButton}}>
    {{!-- {{#ember-collection items=this.manager.stellarpedia.data
    cell-layout=(fixed-grid-layout 200 40) as |book index|}} --}}
    {{#each this.manager.stellarpedia.data as |book|}}
    <button id="sidebar-button-{{book.id}}" type="button" class="sidebar-collapsible" {{on "click" this.onBookClick}}>
        <FaIcon @icon={{book.faIcon}} @size={{this.manager.constants.sidebarIconSize}}
            class="margin-sides-medium fg-teal-neon" />
        <p class="margin-vertical-auto">{{localize (concat "Stellarpedia_" book.id)}}</p>
    </button>
    <div id="sidebar-button-{{book.id}}-content" class="sidebar-collapsible-content">
        {{#each book.chapters as |chapter|}}
        <button id="sidebar-button-{{book.id}}.{{chapter.id}}" type="button" class="sidebar-collapsible" {{on "click"
            (fn this.onChapterClick book.id)}}>
            <FaIcon @icon={{this.chapterIcon}} class="margin-sides-medium fg-teal-neon" />
            <p class="margin-vertical-auto">{{chapter.header}}</p>
        </button>
        <div id="sidebar-button-{{book.id}}.{{chapter.id}}-content" class="sidebar-collapsible-content">
            {{#each chapter.entries as |entry|}}
            <button id="sidebar-button-{{book.id}}.{{chapter.id}}.{{entry.id}}" type="button"
                class="sidebar-collapsible" {{on "click" (fn this.onEntryClick entry book.id chapter.id)}}>
                <FaIcon @icon={{this.entryIcon}} class="margin-sides-medium fg-teal-neon" />
                <p class="margin-vertical-auto">{{stellarpedia/sp-get-entry-header entry}}</p>
            </button>
            {{/each}}
        </div>
        {{/each}}
    </div>
    <div class="sidebar-sep"></div>
    {{!-- {{/ember-collection}} --}}
    {{/each}}
</div>