<h2 class="fg-white text-center">{{localize "Route_Generator_Preset_Title"}}</h2>
<Layout::Panel @size="small" @alignment="center">
    <p class="text-center">{{localize "Route_Generator_Preset_Text01"}}</p>
    <div class="spacer" />
    <form {{on "submit" this.onSubmit}}>
        <Interactable::Dropdown @label={{localize "route/generator/preset/preset" }} @size="large"
            @items={{@model.characterPresets}} @onChangeListener={{this.onChangePreset}}
            @info="basic-rules/the-first-character/generator-presets" />
        <Interactable::Toggle @label={{localize "route/generator/preset/custom" }} @changeset={{this.changeset}}
            @key="isCustom" @onChangeListener={{this.onCustomToggle}} />
        <Interactable::Inputfield @label={{localize "route/generator/preset/gp-bonus" }} @size="small"
            @textPosition="right" @required={{true}} @disabled={{unless this.changeset.isCustom true}}
            @changeset={{this.changeset}} @key="gpBonus" @pattern={{this.manager.pattern.numeric}} @maxLength="2" />
        <Interactable::Inputfield @label={{localize "route/generator/preset/min-traits" }} @size="small"
            @textPosition="right" @required={{true}} @disabled={{unless this.changeset.isCustom true}}
            @changeset={{this.changeset}} @key="traitsMin" @pattern={{this.manager.pattern.numeric}} @maxLength="2" />
        <Interactable::Inputfield @label={{localize "route/generator/preset/max-traits" }} @size="small"
            @textPosition="right" @required={{true}} @disabled={{unless this.changeset.isCustom true}}
            @changeset={{this.changeset}} @key="traitsMax" @pattern={{this.manager.pattern.numeric}} @maxLength="2" />
        <Interactable::Inputfield @label={{localize "route/generator/preset/max-abilities" }} @size="small"
            @textPosition="right" @required={{true}} @disabled={{unless this.changeset.isCustom true}}
            @changeset={{this.changeset}} @key="abilitiesMax" @pattern={{this.manager.pattern.numeric}}
            @maxLength="2" />
        <Interactable::Inputfield @label={{localize "route/generator/preset/available-ip" }} @size="small"
            @textPosition="right" @required={{true}} @disabled={{unless this.changeset.isCustom true}}
            @changeset={{this.changeset}} @key="ipAvailable" @pattern={{this.manager.pattern.numeric}} @maxLength="3" />
        <Interactable::Inputfield @label={{localize "route/generator/preset/start-ep" }} @size="medium"
            @textPosition="right" @required={{true}} @disabled={{unless this.changeset.isCustom true}}
            @changeset={{this.changeset}} @key="epStart" @pattern={{this.manager.pattern.numeric}} @maxLength="5" />
        <Interactable::Inputfield @label={{localize "route/generator/preset/start-money" }} @size="medium"
            @textPosition="right" @required={{true}} @disabled={{unless this.changeset.isCustom true}}
            @changeset={{this.changeset}} @key="crStart" @pattern={{this.manager.pattern.numeric}} @maxLength="9" />
        <Interactable::Inputfield @label={{localize "route/generator/preset/start-fp" }} @size="small"
            @textPosition="right" @required={{true}} @disabled={{unless this.changeset.isCustom true}}
            @changeset={{this.changeset}} @key="fpStart" @pattern={{this.manager.pattern.numeric}} @maxLength="1" />
        <div class="spacer" />
        <Interactable::Toggle @label={{localize "Route_Generator_Preset_ShowTutorials" }}
            @changeset={{this.generatorSettingsChangeset}} @key="showTutorials" />
        <Interactable::button @type="submit" @label={{localize "Route_Generator_Preset_Start" }}
            class="interactable-size-large margin-horizontal-auto" />
    </form>
</Layout::Panel>