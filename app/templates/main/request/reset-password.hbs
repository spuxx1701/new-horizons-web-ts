<div class="v-box justify-content-center overflow-hidden">
    <h3 class="fg-white text-center">{{localize "Route_ResetPassword_Title"}}</h3>
    <div class="panel panel-small align-items-center">
        <form class="align-items-center" {{on "submit" this.onSubmit}}>
            <Interactable::inputfield class="paddingTopBottom10px" @id="signup-input-password"
                @label="Route_ResetPassword_NewPasswordLabel" @required={{true}}
                @placeholder="Route_ResetPassword_NewPasswordPlaceholder" @changeset={{this.changeset}}
                @key="passwordRaw" @type="password" @minLength="8" @maxLength="40"
                @pattern={{this.manager.pattern.passwordAsString}} @style="width: 300px;"
                @eventListeners={{this.passwordEventListeners}} />
            <div class="h-box justify-content-center paddingTopBottom10px">
                <div id="password-sec-bar-1" class="h-box-item password-sec-level-bar" />
                <div id="password-sec-bar-2" class="h-box-item password-sec-level-bar" />
                <div id="password-sec-bar-3" class="h-box-item password-sec-level-bar" />
                <div id="password-sec-bar-4" class="h-box-item password-sec-level-bar" />
            </div>
            <div class="min-height-small">
                <p id="password-requirements-text" class="text-center interactable-subtitle">{{localize
                    "Route_SignUp_PasswordReq_Text01"}}
                    <br />{{localize "Route_SignUp_PasswordReq_Text02"}}
                    <br />{{localize "Route_SignUp_PasswordReq_Text03"}}
                </p>
            </div>
            <Interactable::button @id="signup-submit" @type="submit" @busy={{this.submitIsBusy}}
                @label={{localize "Route_ResetPassword_Submit" }} @style="width: 300px;" />
        </form>
    </div>
</div>